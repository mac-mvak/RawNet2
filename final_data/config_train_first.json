{
    "name": "deepspeech",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {
                "n_mels": 256
            }
        },
        "log_spec": true
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "RawNet2",
        "args": {
            "sinc_channels": 128,
            "sinc_kernel": 1024,
            "res_channels_1": 20,
            "res_channels_2": 128,
            "gru_hidden": 1024
        }
    },
    "data": {
        "train": {
            "batch_size": 32,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "ASVDataset",
                    "args": {
                        "part": "train"
                    }
                }
            ]
        },
        "val": {
            "batch_size": 32,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "ASVDataset",
                    "args": {
                        "part": "dev"
                    }
                }
            ]
        }, 
        "test": {
            "batch_size": 32,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "ASVDataset",
                    "args": {
                        "part": "eval"
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-4,
            "weight_decay": 1e-4
        }
    },
    "lr_scheduler": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.9999999
        }

    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {"weight": [1.0, 9.0]}
    },
    "metrics": [{
        "type": "EER",
        "args": {}
    }],
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "asr_project"
    }
}